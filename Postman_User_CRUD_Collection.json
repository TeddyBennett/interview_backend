	"item": [
		{
			"name": "Admin",
			"item": [
				{
					"name": "Admin Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (pm.response.code === 200 && jsonData.data && jsonData.data.token) {",
									"    pm.environment.set(\"adminJwtToken\", jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"admin",
								"login"
							]
						}
					}
				},
				{
					"name": "Create API Key",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (pm.response.code === 201 && jsonData.data) {",
									"    pm.environment.set(\"xApiKey\", jsonData.data);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminJwtToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"clientName\": \"PostmanUserClient\",\n    \"isEnabled\": true,\n    \"expiresAt\": null\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/apikeys",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"admin",
								"apikeys"
							]
						}
					}
				}
			]
		},
